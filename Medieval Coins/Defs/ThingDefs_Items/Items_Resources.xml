<?xml version="1.0" encoding="utf-8" ?>

<Defs>

<!--============================== Metals ==============================-->
  <!--=============== Copper ====================-->
    <!--=============== Ore ====================-->

  <ThingDef ParentName="ResourceBase">
    <defName>CopperOre</defName>
    <label>copper ore</label>
    <description>A raw copper ore, needs to be processed into ingots at a smelter to be usable.</description>
    <graphicData>
      <texPath>Resources/CopperOre</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>0.4</MarketValue>
      <Mass>0.04</Mass>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>1.0</deepCommonality>
    <deepCountPerPortion>45</deepCountPerPortion>
    <deepLumpSizeRange>20~30</deepLumpSizeRange>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>

    <!--=============== Ingot ====================-->

  <ThingDef ParentName="ResourceBase">
    <defName>CopperIngot</defName>
    <label>copper ingot</label>
    <description>A bar of copper. Ready to be used in crafting coins.</description>
    <graphicData>
      <texPath>Resources/CopperIngot</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>1.5</MarketValue>
      <Mass>0.04</Mass>
      <StuffPower_Armor_Sharp>0.85</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.38</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.58</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.9</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>5</deepCommonality>
    <deepCountPerPortion>45</deepCountPerPortion>
    <deepLumpSizeRange>20~30</deepLumpSizeRange>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <stuffProps>
      <stuffAdjective>iron</stuffAdjective>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>1.00</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(112, 108, 101)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.9</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>0.42</Flammability>
      </statFactors>
    </stuffProps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>
