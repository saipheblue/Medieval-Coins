<Defs>

 <!-- Copper Ingots --> 

	<RecipeDef ParentName="DankPyon_SmelterBase">
		<defName>DankPyon_MakeIngots_Copper</defName>
		<workAmount>100</workAmount>		
		<label>smelt a copper ore into an ingot</label>
		<jobString>Smelting copper ore into 1 ingot.</jobString>
		<targetCountAdjustment>1</targetCountAdjustment>	
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CopperOre</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>CopperOre</li>
			</thingDefs>
		</fixedIngredientFilter>
    <products>
      <CopperIngot>1</CopperIngot>
    </products>	
		<researchPrerequisites>
			<li>Copper</li>
		</researchPrerequisites>	
  </RecipeDef> 
  
